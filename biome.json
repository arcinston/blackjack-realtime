{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsoleLog": "warn",
        "noShadowRestrictedNames": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useSemanticElements": "off",
        "useFocusableInteractive": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "useJsxKeyInIterable": "off"
      }
    },
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      "esmbuild",
      "packages/huddle01_flutter_client",
      "apps/contracts/broadcast",
      "packages/unity_webgl",
      "packages/unity"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "enabled": true,
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      "gen/*",
      "esmbuild",
      "artifacts",
      "packages/huddle01_flutter_client",
      "packages/unity_webgl",
      "packages/unity",
      "typechain-types/",
      "broadcast/*"
    ]
  },
  "files": {
    "ignore": [
      "node_modules",
      "contracts/lib/*",
      "openzeppelin-contracts/*",
      ".next",
      "dist",
      "gen/*",
      "esmbuild",
      "packages/huddle01_flutter_client",
      "packages/huddle01-python",
      "artifacts",
      "deployments/*",
      "broadcast/*",
      "typechain-types/"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
